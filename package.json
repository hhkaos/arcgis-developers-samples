{
  "name": "sample-apps-dev",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:watch-json",
    "dev:server": "vite --port 8080",
    "dev:watch-json": "chokidar \"data/apps.json\" --command \"npm run validate-json\"",
    "validate-json": "node scripts/validate-json.js",
    "build": "vite build",
    "preview": "vite preview --port 8080"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "vite": "^5.0.0"
  }
}
